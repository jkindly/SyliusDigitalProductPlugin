<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SyliusDigitalProductPlugin\Entity\UploadedDigitalFile" table="sylius_digital_file_plugin_uploaded_digital_file">
        <field name="path" column="path" length="255"/>
        <field name="mimeType" column="mime_type" length="255"/>
        <field name="originalFilename" column="original_file_name" length="255"/>
        <field name="size" column="size" type="bigint">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <indexes>
            <index columns="path"/>
        </indexes>
    </entity>

</doctrine-mapping>
