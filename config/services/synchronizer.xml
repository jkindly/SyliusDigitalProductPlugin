<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.synchronizer.digital_file_handler_registry" class="SyliusDigitalProductPlugin\Synchronizer\DigitalFileSynchronizerRegistry">
            <argument type="tagged_iterator" tag="sylius_digital_product_plugin.digital_file.synchronizer"/>
        </service>

        <service id="sylius_digital_product_plugin.synchronizer.uploaded_digital_file"
                 class="SyliusDigitalProductPlugin\Synchronizer\UploadedDigitalFileSynchronizer"
        >
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sylius_digital_product_plugin.handler.digital_file_handler_registry"/>
            <argument type="service" id="sylius_digital_product_plugin.repository.uploaded_digital_file"/>
            <argument>%sylius_digital_product_plugin.file_type.uploaded%</argument>
            <tag name="sylius_digital_product_plugin.digital_file.synchronizer"/>
        </service>
    </services>
</container>
