<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.response_generator.registry" class="SyliusDigitalProductPlugin\ResponseGenerator\FileResponseGeneratorRegistry">
            <argument type="tagged_iterator" tag="sylius_digital_product_plugin.file_response_generator"/>
        </service>

        <service id="sylius_digital_product_plugin.response_generator.uploaded_file" class="SyliusDigitalProductPlugin\ResponseGenerator\UploadedFileResponseGenerator">
            <argument>%sylius_digital_product_plugin.file_type.uploaded%</argument>
            <argument>%sylius_digital_product_plugin.uploaded_file.directory%</argument>
            <tag name="sylius_digital_product_plugin.file_response_generator"/>
        </service>

        <service id="sylius_digital_product_plugin.response_generator.external_url" class="SyliusDigitalProductPlugin\ResponseGenerator\ExternalUrlFileResponseGenerator">
            <argument>%sylius_digital_product_plugin.file_type.external_url%</argument>
            <tag name="sylius_digital_product_plugin.file_response_generator"/>
        </service>
    </services>
</container>
