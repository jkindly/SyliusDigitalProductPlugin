<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.handler.digital_file_handler_registry" class="SyliusDigitalProductPlugin\Handler\DigitalFileHandlerRegistry">
            <argument type="tagged_iterator" tag="sylius_digital_product_plugin.digital_file.handler"/>
        </service>

        <service id="sylius_digital_product_plugin.handler.uploaded_digital_file" class="SyliusDigitalProductPlugin\Handler\UploadedDigitalFileHandler">
            <argument>%sylius_digital_product_plugin.file_type.uploaded%</argument>
            <tag name="sylius_digital_product_plugin.digital_file.handler"/>
        </service>
    </services>
</container>
