<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.event_listener.product" class="SyliusDigitalProductPlugin\EventListener\ProductVariantListener">
            <argument type="service" id="sylius_digital_product_plugin.handler.uploaded_digital_file"/>
            <argument type="service" id="sylius_digital_product_plugin.serializer.uploaded_digital_file_configuration"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%sylius_digital_product_plugin.file_type.uploaded%</argument>
            <tag name="kernel.event_listener" event="sylius.product_variant.post_create" method="handleProductVariantUpdate"/>
            <tag name="kernel.event_listener" event="sylius.product_variant.post_update" method="handleProductVariantUpdate"/>
            <tag name="kernel.event_listener" event="sylius.product.post_create" method="handleSimpleProductUpdate"/>
            <tag name="kernel.event_listener" event="sylius.product.post_update" method="handleSimpleProductUpdate"/>
        </service>

        <service id="sylius_digital_product_plugin.event_listener.remove_uploaded_digital_file"
                 class="SyliusDigitalProductPlugin\EventListener\RemoveUploadedFileListener"
        >
            <argument type="service" id="sylius_digital_product_plugin.uploader.local_digital_product_file"/>
            <tag name="doctrine.orm.entity_listener" entity="SyliusDigitalProductPlugin\Entity\DigitalProductFile" method="preRemove"/>
        </service>

        <service id="sylius_digital_product_plugin.event_listener.workflow.order_payment.create_order_item_file" class="SyliusDigitalProductPlugin\EventListener\Workflow\OrderPayment\CreateOrderItemFileListener">
            <argument type="service" id="sylius_digital_product_plugin.factory.order_item_file" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="kernel.event_listener" event="workflow.sylius_order_payment.completed.pay" priority="300"/>
        </service>
    </services>
</container>
