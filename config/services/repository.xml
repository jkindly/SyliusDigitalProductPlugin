<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.repository.digital_file"
                 class="SyliusDigitalProductPlugin\Repository\DigitalProductFileRepository">
            <argument type="service" id="doctrine"/>
            <argument>SyliusDigitalProductPlugin\Entity\DigitalProductFile</argument>
            <tag name="doctrine.repository_service"/>
        </service>

        <service id="sylius_digital_product_plugin.repository.order_item_file"
                 class="SyliusDigitalProductPlugin\Repository\DigitalProductOrderItemFileRepository">
            <argument type="service" id="doctrine"/>
            <argument>SyliusDigitalProductPlugin\Entity\DigitalProductOrderItemFile</argument>
            <tag name="doctrine.repository_service"/>
        </service>
    </services>
</container>
