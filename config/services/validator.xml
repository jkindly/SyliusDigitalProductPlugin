<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.validator.uploaded_digital_file_dto"
                 class="SyliusDigitalProductPlugin\Validator\UploadedFileDtoValidator"
        >
            <argument type="service" id="serializer.mapping.class_metadata_factory" />
            <argument type="service" id="sylius_digital_product_plugin.serializer.uploaded_digital_file_configuration" />
        </service>

        <service id="sylius_digital_product_plugin.validator.external_url_digital_file_dto"
                 class="SyliusDigitalProductPlugin\Validator\ExternalUrlFileDtoValidator"
        >
            <argument type="service" id="serializer.mapping.class_metadata_factory" />
            <argument type="service" id="sylius_digital_product_plugin.serializer.external_url_digital_file_configuration" />
        </service>
    </services>
</container>

