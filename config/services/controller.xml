<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.controller.action.uploaded_digital_file_download" class="SyliusDigitalProductPlugin\Controller\Action\UploadedDigitalFileDownloadAction">
            <argument type="service" id="sylius_digital_product_plugin.repository.digital_file"/>
            <argument type="service" id="sylius_digital_product_plugin.serializer.uploaded_digital_file_configuration"/>
            <argument>%sylius_digital_product_plugin.uploaded_file.directory%</argument>
            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>
