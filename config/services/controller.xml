<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_digital_product_plugin.controller.admin.action.uploaded_digital_file_download" class="SyliusDigitalProductPlugin\Controller\Admin\Action\UploadedFileDownloadAction">
            <argument type="service" id="sylius_digital_product_plugin.repository.digital_file"/>
            <argument type="service" id="sylius_digital_product_plugin.serializer.uploaded_digital_file_configuration"/>
<!--            <argument>%sylius_digital_product_plugin.uploaded_file.directory%</argument>-->
            <tag name="controller.service_arguments" />
        </service>

        <service id="sylius_digital_product_plugin.controller.shop.action.download_order_item_file" class="SyliusDigitalProductPlugin\Controller\Shop\Action\DownloadOrderItemFileAction">
            <argument type="service" id="sylius_digital_product_plugin.repository.order_item_file"/>
            <argument type="service" id="security.helper"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sylius_digital_product_plugin.response_generator.registry"/>
            <argument type="service" id="sylius_digital_product_plugin.serializer.registry"/>
            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>
