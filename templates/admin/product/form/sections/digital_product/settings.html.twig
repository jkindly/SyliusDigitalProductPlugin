{% set product = hookable_metadata.context.resource %}

{% if product.isSimple %}
    {% set digital_product_settings_form = hookable_metadata.context.form.variant.digitalProductVariantSettings %}
    {% form_theme digital_product_settings_form '@SyliusDigitalProductPlugin/admin/shared/form_theme.html.twig' %}

    <div class="card mb-3">
        <div class="card-header flex-column align-items-start">
            <h2 class="card-title">{{ 'sylius_digital_product.ui.settings'|trans }}</h2>
            <p class="form-text mb-0 help-text">This settings can be overridden in Channel settings.</p>
        </div>
        <div class="card-body">
            <div class="row">
                {{ form_row(digital_product_settings_form, {label: false}) }}
            </div>
        </div>
    </div>
{% endif %}
